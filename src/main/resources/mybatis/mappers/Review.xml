<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Review">	
	<select id="reviewCnt" resultType="HashMap">
		select count(*)  as cnt from Review
    		where shop_id = #{shopId}
	</select>
	
	<insert id="reviewInsert" parameterType="reviewvo">
		Insert into Review values(seq_review_idx.nextval,#{shop_id},#{user_email},${review_score},#{review},sysdate,0,0,#{review_photo})
	</insert>
</mapper>